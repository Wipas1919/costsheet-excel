# EC - AI Cost Estimation System Environment Variables
# Copy this file to .env and fill in your actual values

# AI Model Configuration
AI_MODEL=gemini-2.0-flash
VISION_DETAIL=high
TEMPERATURE=1.0

# API Endpoints
WINDMILL_API_URL=https://api.example.com/windmill
STORAGE_API_URL=https://storage.example.com

# Authentication
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# Database Configuration
DATABASE_URL=your_database_url_here
KNOWLEDGE_BASE_URL=your_knowledge_base_url_here

# File Storage
STORAGE_BUCKET=your_storage_bucket_name
STORAGE_REGION=your_storage_region

# Security
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Development Settings
DEBUG=False
ENVIRONMENT=production

# File Upload Limits
MAX_FILE_SIZE=15
MAX_FILES=10
ALLOWED_EXTENSIONS=.JPG,.JPEG,.PNG,.GIF,.WEBP,.SVG

# Performance Settings
TIMEOUT=300
RETRY_ATTEMPTS=3
CACHE_TTL=3600

# External Services
DIFY_API_KEY=your_dify_api_key_here
WINDMILL_API_KEY=your_windmill_api_key_here 